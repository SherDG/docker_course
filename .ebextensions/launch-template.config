# .ebextensions/launch-template.config
option_settings:
  # Enable launch templates
  aws:elasticbeanstalk:cloudformation:template:
    UseLaunchTemplates: true
  
  # Auto Scaling settings
  aws:autoscaling:asg:
    MinSize: 1
    MaxSize: 4
    
  # Instance settings - ensure enough capacity for Docker
  aws:ec2:instances:
    InstanceTypes: t3.small  # recommended minimum for Docker workloads

  # Docker-specific settings
  aws:elasticbeanstalk:environment:proxy:
    ProxyServer: nginx